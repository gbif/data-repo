<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>motherpom</artifactId>
    <groupId>org.gbif</groupId>
    <version>37</version>
    <relativePath>../pom.xml/pom.xml</relativePath>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.gbif.data</groupId>
  <artifactId>data-repo-server</artifactId>
  <name>GBIF Data Repo</name>
  <version>1.0-SNAPSHOT</version>
  <description>General service to store arbitrary data arhives that will be referenced using DOIs</description>
  <url>http://github.com/gbif/data-repo</url>
  <scm>
    <connection>scm:git:git@github.com:gbif/data-repo.git</connection>
    <developerConnection>scm:git:git@github.com:gbif/data-repo.git</developerConnection>
    <url>https://github.com/gbif/data-repo</url>
  </scm>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>${maven-shade-plugin.version}</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer />
                <transformer>
                  <mainClass>org.gbif.data.DataServerApplication</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
        <configuration>
          <createDependencyReducedPom>true</createDependencyReducedPom>
          <filters>
            <filter>
              <artifact>*:*</artifact>
              <excludes>
                <exclude>META-INF/*.SF</exclude>
                <exclude>META-INF/*.DSA</exclude>
                <exclude>META-INF/*.RSA</exclude>
              </excludes>
            </filter>
          </filters>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <id>gbif-all</id>
      <url>http://repository.gbif.org/content/groups/gbif</url>
    </repository>
    <repository>
      <id>gbif-thirdparty</id>
      <url>http://repository.gbif.org/content/repositories/thirdparty</url>
    </repository>
  </repositories>
  <distributionManagement>
    <site>
      <id>gh-pages</id>
      <url>http://gbif.github.io/data-repo.git/</url>
    </site>
  </distributionManagement>
  <properties>
    <maven-core.version>3.3.9</maven-core.version>
    <slf4j.version>1.7.18</slf4j.version>
    <junit.version>4.12</junit.version>
    <maven-compiler-plugin.version>2.0.2</maven-compiler-plugin.version>
    <maven-shade-plugin.version>2.3</maven-shade-plugin.version>
    <maven-model.version>3.1.1</maven-model.version>
    <dropwizard.version>0.9.2</dropwizard.version>
    <logback.version>1.1.6</logback.version>
    <surefire-maven-plugin.version>2.7</surefire-maven-plugin.version>
    <jdkLevel>1.8</jdkLevel>
    <curator.version>2.9.1</curator.version>
    <jackson.dropwizard.version>2.6.3</jackson.dropwizard.version>
  </properties>
</project>

